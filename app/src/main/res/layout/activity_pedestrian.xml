<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mssd.zl.PedestrianActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px">

        <TextView
            android:id="@+id/pedestrian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="行者"
            android:textColor="@color/mainUnChecked"
            android:textSize="72px" />
    </RelativeLayout>

    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/pedestrian_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.mssd.utils.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/isShow"
                    android:layout_width="match_parent"
                    android:layout_height="1200px"
                    android:gravity="center"
                    android:text="暂无更多数据"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pedestrian_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </com.mssd.utils.MyScrollView>
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>
</LinearLayout>
