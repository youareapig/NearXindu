<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mssd.html.WebActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout style="@style/TitleStyle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="#000" />

        <RelativeLayout
            android:id="@+id/talk_back"
            style="@style/backview">

            <ImageView
                android:layout_width="26px"
                android:layout_height="49px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_hei_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/talk_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="72px" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="54px"
            android:layout_height="55px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@mipmap/share" />
        <ImageView
            android:id="@+id/shoucang"
            android:layout_width="58px"
            android:layout_height="54px"
            android:src="@mipmap/shoucang"
            android:layout_toLeftOf="@+id/share"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"/>
    </RelativeLayout>
</RelativeLayout>