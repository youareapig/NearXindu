<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stay_item_recycle_img"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:src="@mipmap/test"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/stay_item_recycle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stay_item_recycle_img"
        android:layout_marginTop="40px"
        android:textSize="58px"
        android:textColor="#515151"/>
    <ImageView
        android:id="@+id/stay_item_recycle_shoucang"
        android:layout_width="58px"
        android:layout_height="54px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:src="@mipmap/shoucang" />
</com.zhy.autolayout.AutoRelativeLayout>
