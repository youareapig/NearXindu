<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/experence_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.mssd.utils.ObservableScrollView
            android:id="@+id/experence_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400px">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/experience_recycleTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/bottomBG" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="650px"
                        android:layout_height="160px"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="67"
                                android:background="#888888" />

                            <TextView
                                android:id="@+id/experience_tx1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:gravity="center"
                                android:text="去   .   吧"
                                android:textColor="@color/mainUnChecked"
                                android:textSize="72px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="67"
                                android:background="#888888" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:id="@+id/experience_tx2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:text="体验这里最有趣的事儿"
                            android:textColor="@color/mainUnChecked"
                            android:textSize="48px" />

                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/experence_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.mssd.utils.ObservableScrollView>
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/experence_title"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:visibility="gone">

        <TextView
            android:id="@+id/experence_titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="体验"
            android:textColor="@color/mainUnChecked"
            android:textSize="72px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#bfbfbf" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>
