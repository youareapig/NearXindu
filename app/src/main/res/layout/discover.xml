<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mssd.utils.ObservableScrollView
        android:id="@+id/discover_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/discover_Topimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="650px"
                    android:layout_height="160px"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="67"
                            android:background="#888888" />

                        <TextView
                            android:id="@+id/discover_tx1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="走   .   吧"
                            android:textColor="@color/mainUnChecked"
                            android:textSize="72px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="67"
                            android:background="#888888" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:id="@+id/discover_tx2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|bottom"
                        android:text="去品味这里独有的历史人文"
                        android:textColor="@color/mainUnChecked"
                        android:textSize="48px" />

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#fff" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discover_recycle1"
                android:layout_width="wrap_content"
                android:layout_height="600px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_gravity="center"
                android:layout_marginTop="40px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginTop="160px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#fff" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discover_recycle2"
                android:layout_width="wrap_content"
                android:layout_height="600px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_gravity="center"
                android:layout_marginTop="40px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginTop="160px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#fff" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discover_recycle3"
                android:layout_width="wrap_content"
                android:layout_height="600px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_gravity="center"
                android:layout_marginTop="40px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:layout_marginTop="160px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/test" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#fff" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discover_recycle4"
                android:layout_width="wrap_content"
                android:layout_height="680px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="40px"
                android:layout_gravity="center"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.mssd.utils.ObservableScrollView>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/discover_title"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:visibility="gone">

        <TextView
            android:id="@+id/discover_titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发现"
            android:textColor="@color/mainUnChecked"
            android:textSize="72px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bfbfbf"
            android:layout_alignParentBottom="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>
