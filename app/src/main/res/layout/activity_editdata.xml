<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mssd.zl.EditdataActivity">

    <RelativeLayout
        style="@style/TitleStyle">

        <RelativeLayout
            android:id="@+id/bianji_back"
            style="@style/backview">

            <ImageView
                android:layout_width="26px"
                android:layout_height="49px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_hei_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bianji_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:textColor="@color/mainUnChecked"
            android:textSize="72px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:id="@+id/bianji_nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="昵称"
                android:textColor="#888888"
                android:textSize="48px" />

            <EditText
                android:id="@+id/bianji_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200px"
                android:layout_toRightOf="@+id/bianji_nicheng"
                android:background="@null"
                android:maxLength="10"
                android:singleLine="true"
                android:text="吃翔翔"
                android:textColor="#515151"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="50px" />

            <TextView
                style="@style/fengexian"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:id="@+id/bianji_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="性别"
                android:textColor="#888888"
                android:textSize="48px" />

            <TextView
                android:id="@+id/bianji_usersex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200px"
                android:layout_toRightOf="@+id/bianji_sex"
                android:gravity="center_vertical"
                android:text="请选择"
                android:textColor="#515151"
                android:textSize="50px" />

            <TextView
                style="@style/fengexian"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:id="@+id/bianji_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="生日"
                android:textColor="#888888"
                android:textSize="48px" />

            <TextView
                android:id="@+id/bianji_userbirthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200px"
                android:layout_toRightOf="@+id/bianji_birthday"
                android:gravity="center_vertical"
                android:text="请选择"
                android:textColor="#515151"
                android:textSize="50px" />

            <TextView
                style="@style/fengexian"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <TextView
                android:id="@+id/bianji_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="常住地"
                android:textColor="#888888"
                android:textSize="48px" />

            <TextView
                android:id="@+id/bianji_usersite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="152px"
                android:layout_toRightOf="@+id/bianji_site"
                android:gravity="center_vertical"
                android:text="请选择"
                android:textColor="#515151"
                android:textSize="50px" />

            <TextView
                style="@style/fengexian"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bianji_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:text="签名"
                android:textColor="#888888"
                android:textSize="48px" />

            <EditText
                android:id="@+id/bianji_usersign"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_marginLeft="200px"
                android:layout_marginRight="40px"
                android:layout_marginTop="70px"
                android:layout_toRightOf="@+id/bianji_sign"
                android:background="@null"
                android:gravity="start"
                android:hint="个性签名....."
                android:maxLength="50"
                android:textColor="#515151"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="50px" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/bianji_save"
        android:layout_width="900px"
        android:layout_height="130px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="120px"
        android:layout_marginTop="120px"
        android:background="@drawable/button"
        android:textSize="58px"
        android:textColor="@color/mainChecked"
        android:gravity="center"
        android:text="保存资料" />
</LinearLayout>
