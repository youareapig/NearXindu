<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notice_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2017-5-5 12:00"
        android:textColor="#888888"
        android:textSize="38px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_item_date"
        android:layout_marginLeft="40px"
        android:layout_marginTop="80px">

        <TextView
            android:id="@+id/notice_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220px"
            android:text="系统通知"
            android:textColor="#888888"
            android:textSize="40px" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_below="@+id/notice_item_text"
            android:layout_marginTop="20px"
            android:src="@mipmap/test" />

        <TextView
            android:id="@+id/notice_item_content"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_below="@+id/notice_item_text"
            android:layout_marginLeft="220px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20px"
            android:padding="40px"
            android:background="@drawable/notice"
            android:textColor="#515151"
            android:textSize="42px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
