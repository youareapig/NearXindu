<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mssd.zl.NatureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/nature_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/nature_viewpager_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/nature_viewpager_grouptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>
</RelativeLayout>
