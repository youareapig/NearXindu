<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mssd.zl.NatureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/nature_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/nature_viewpager_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />

    </RelativeLayout>
    <RelativeLayout
        style="@style/TitleStyle">
        <RelativeLayout
            android:id="@+id/nature_back"
            style="@style/backview">

            <ImageView
                android:layout_width="26px"
                android:layout_height="49px"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_bai_icon" />
        </RelativeLayout>
        <TextView
            android:id="@+id/nature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="自然资源"
            android:textColor="@color/mainUnChecked"
            android:textSize="72px" />

    </RelativeLayout>
</RelativeLayout>
